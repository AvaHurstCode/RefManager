<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/defaults.css">
    <link rel="stylesheet" href="/css/colourscheme">
    <link rel="stylesheet" href="/css/sections.css">
    <title>Projects</title>
</head>
<body>
    <section class="project-list">
        <ul>
            <% for (const x of projects) { %>
                <li>
                    <form action="/delProject" method="post">
                        <input type="text" name="projectId" value="<%= x._id.toString() %>">
                        <button class="image-container"></button>
                    </form>
                    <p><%=x.projectName%> </br> <%= x.dateCreated %> </br> By: <%= x.author %></p>
                    <a href="/editProject/<%=x._id.toString()%>"><button>Edit</button></a>
                </li>
            <% } %>
        </ul>
    </section>
</body>
</html>